DROP DATABASE BANKING;
CREATE DATABASE BANKING;
USE BANKING;
SHOW DATABASES;

CREATE TABLE BRANCH (
 BRANCH_NAME CHAR(25) PRIMARY KEY,
 BRANCH_CITY CHAR(15),
 ASSETS REAL);
 DESC BRANCH;
 
 CREATE TABLE BANK_ACC (
 ACC_NO INT PRIMARY KEY,
 BRANCH_NAME CHAR(25),
 BALANCE REAL,
 FOREIGN KEY (BRANCH_NAME) REFERENCES BRANCH (BRANCH_NAME) ON DELETE CASCADE);
 DROP TABLE BANK_ACC;
 DESC BANK_ACC;
 
CREATE TABLE DEPO (
CUST_NAME CHAR(25) PRIMARY KEY,
ACC_NO INT,
FOREIGN KEY (ACC_NO) REFERENCES BANK_ACC (ACC_NO) ON DELETE CASCADE);
DROP TABLE DEPO;
DESC DEPO;

CREATE TABLE BANK_CUST (
CUST_NAME CHAR(25),
STREET CHAR(15),
CITY CHAR(10),
FOREIGN KEY (CUST_NAME) REFERENCES DEPO (CUST_NAME) ON DELETE CASCADE);
DESC BANK_CUST;

CREATE TABLE LOAN (
LOAN_NO INT PRIMARY KEY,
BRANCH_NAME CHAR(25),
AMOUNT REAL,
FOREIGN KEY (BRANCH_NAME) REFERENCES BRANCH (BRANCH_NAME) ON DELETE CASCADE);
DROP TABLE LOAN;
DESC LOAN;

INSERT INTO BRANCH VALUES ('HOSPET','ABC','64');
INSERT INTO BRANCH VALUES ('SURAT','DEF','40');
INSERT INTO BRANCH VALUES ('VESU','GHI','72');
SELECT * FROM BRANCH;
SHOW TABLES;

