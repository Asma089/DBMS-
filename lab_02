DROP DATABASE SUPPLIER;
CREATE DATABASE SUPPLIER;
USE SUPPLIER;
SHOW DATABASES;

CREATE TABLE SUPPLIERS (
SID INT PRIMARY KEY,
SNAME CHAR(25),
ADDRESS VARCHAR(25)
);
DESC SUPPLIERS;

CREATE TABLE PARTS (
PID INT PRIMARY KEY,
PNAME CHAR(25),
COLOR VARCHAR(25)
);
DESC PARTS;

CREATE TABLE CATALOG (
SID INT,
PID INT ,
COST REAL,
FOREIGN KEY (SID) REFERENCES SUPPLIERS (SID) ON DELETE CASCADE,
FOREIGN KEY (PID) REFERENCES PARTS (PID) ON DELETE CASCADE
);
DESC CATALOG;
DROP TABLE CATALOG;

INSERT INTO SUPPLIERS VALUES ('1','AMAIRA','BANGLORE');
INSERT INTO SUPPLIERS VALUES ('2','RAYAN','MYSORE');
INSERT INTO SUPPLIERS VALUES ('3','FARHAN','MANGLORE');
SELECT * FROM SUPPLIERS;
SHOW TABLES;

INSERT INTO PARTS VALUES ('4','BOOK','BLACK');
INSERT INTO PARTS VALUES ('5','PEN','BLUE');
INSERT INTO PARTS VALUES ('6','ERASER','WHITE');
SELECT * FROM PARTS;
SHOW TABLES;

INSERT INTO CATALOG VALUES ('1','4','50');
INSERT INTO CATALOG VALUES ('2','5','25');
INSERT INTO CATALOG VALUES ('3','6','10');
SELECT * FROM CATALOG;
SHOW TABLES;

SELECT PNAME
FROM PARTS
WHERE PID in            
(SELECT PID FROM CATALOG
WHERE EXISTS
(SELECT *
FROM SUPPLIERS));

SELECT SNAME
FROM SUPPLIER
WHERE SID in
(SELECT SID FROM CATALOG
WHERE PID > ALL(
SELECT PID FROM PARTS));

SELECT SNAME
FROM SUPPLIERS
WHERE SID in
(SELECT SID
FROM CATALOG WHERE PID in
(SELECT PID
FROM PARTS
WHERE COLOR = 'BLACK'));

SELECT PNAME
FROM PARTS
WHERE PID in
(SELECT PID
FROM CATALOG WHERE SID in
(SELECT SID
FROM SUPPLIERS
WHERE SNAME = 'RAYAN'));
